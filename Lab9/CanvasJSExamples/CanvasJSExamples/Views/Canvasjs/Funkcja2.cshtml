
@{
    ViewBag.Title = "Index";
}

<h2>Przykład wykresu liniowego z losowym źródłem danych</h2>

<!-- Sekcja do generowania wykresu -->
<script>
	//Funkcja1
	window.onload = function () {

	var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	animationEnabled: true,
	zoomEnabled: true,
	title: {
		text: "Try Zooming and Panning"
	},
	data: [{
		type: "line",
		dataPoints: @Html.Raw(ViewBag.DataPoints3) //Tutaj drukujemy dane z serjalizacji wykonanej w akcji index kontrolera CanvasjsController
	}]
});

chart.render();
}
</script>

<div id="chartContainer" style="height: 370px; width: 100%;"></div>

