
@{
    ViewBag.Title = "Index";
}

<h2>Przykład wykresu liniowego z losowym źródłem danych</h2>

<!-- Sekcja do generowania wykresu -->
<script>
	//Funkcja1
	window.onload = function () {

	var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	animationEnabled: true,
	zoomEnabled: true,
	title: {
		text: "Wykres 1 - Wykres Slupkowy"
		},
	toolTip: {
		enabled: true,
		animationEnabled: true,
        content: "{name}: {label} {y}",
	},

    data: [{
		type: "column",
		name: "Owoce 2015",
		color: "red",
		dataPoints: @Html.Raw(ViewBag.LabelSerie1),
		},
		{
		type: "column",
		name: "Owoce 2018",
		color: "green",
		dataPoints: @Html.Raw(ViewBag.LabelSerie2),
		},
		{
		type: "column",
		name: "Owoce 2021",
		color: "blue",
		dataPoints: @Html.Raw(ViewBag.LabelSerie3),
		},
	]
});

chart.render();
}
</script>

<div id="chartContainer" style="height: 370px; width: 100%;"></div>

