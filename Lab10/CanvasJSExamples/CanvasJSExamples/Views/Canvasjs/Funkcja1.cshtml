
@{
    ViewBag.Title = "Index";
}

<h2>Canvasjs</h2>

<!-- Sekcja do generowania wykresu -->
<script>
	window.onload = function () {
	var x = @Html.Raw(ViewBag.X);
	var y = @Html.Raw(ViewBag.Y);
	var dataPoints = [];

	for (var i = 0; i < x.length; i++) {
		dataPoints.push({ x: x[i], y: y[i] });
	}
	var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	animationEnabled: true,
	zoomEnabled: true,
	title: {
        text: "Funkcja 1 - Canvasjs"
	},
	data: [{
		type: "line",
		dataPoints: dataPoints //Tutaj drukujemy dane z serjalizacji wykonanej w akcji index kontrolera CanvasjsController
	}]
});

chart.render();
}
</script>

<div id="chartContainer" style="height: 370px; width: 100%;"></div>

