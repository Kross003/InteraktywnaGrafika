
@{
    ViewBag.Title = "Index";
}
<html>
<head>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/chart.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <style>
        #chartDiv {
            width: 800px;
            height: 400px;
            border: solid 1px;
            padding: 1px;
            margin: 10px;
        }
    </style>
</head>
<body>
    <h2>Chartjs - Wykres Slupkowy</h2>
    <div id="chartDiv">
        <canvas id="barChart" />
    </div>
    <script type="text/javascript">
        var labels = @Html.Raw(ViewBag.labels);
        var y1 = @ViewBag.y1;
        var y2 = @Html.Raw(ViewBag.y2);
        var y3 = @Html.Raw(ViewBag.y3);
        var ctx = $("#barChart");
        var barChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels, datasets: [{
                    label: '2010', data: y1, backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                },
                    {
                        label: '2011', data: y2, backgroundColor: 'rgba(54, 162, 235, 0.6)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                    },
                    {
                        label: '2012', data: y3, backgroundColor: 'rgba(255, 99, 132, 0.6)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                    },
                ]
            },
            config: {
                responsive: true, plugins: {
                    legend: {
                        position: 'top',
                    }, title: {
                        display: true, text: 'Example of the line chart'
                    }
                }
            }
        });

    </script>
</body>
</html>


